<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/plantInfoImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/nameInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/black_text"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/plantInfoImageView"
            tools:layout_editor_absoluteX="155dp" />

        <ImageView
            android:id="@+id/sunIconImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameInfoTextView"
            app:srcCompat="@android:drawable/btn_dialog" />

        <ImageView
            android:id="@+id/placementImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/sunIconImageView"
            app:layout_constraintTop_toBottomOf="@+id/sunIconImageView"
            app:srcCompat="@android:drawable/btn_dialog" />

        <ImageView
            android:id="@+id/waterImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/toxicImageView"
            app:layout_constraintTop_toBottomOf="@+id/toxicImageView"
            app:srcCompat="@android:drawable/btn_dialog" />

        <ImageView
            android:id="@+id/toxicImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/placementImageView"
            app:layout_constraintTop_toBottomOf="@+id/placementImageView"
            app:srcCompat="@android:drawable/btn_dialog" />

        <Button
            android:id="@+id/waterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customNoteImageView" />

        <TextView
            android:id="@+id/waterDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/waterButton" />

        <TextView
            android:id="@+id/sunTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/sunIconImageView"
            app:layout_constraintStart_toEndOf="@+id/sunIconImageView"
            app:layout_constraintTop_toTopOf="@+id/sunIconImageView" />

        <TextView
            android:id="@+id/placementTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/placementImageView"
            app:layout_constraintStart_toEndOf="@+id/placementImageView"
            app:layout_constraintTop_toTopOf="@+id/placementImageView" />

        <TextView
            android:id="@+id/waterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/waterImageView"
            app:layout_constraintStart_toEndOf="@+id/waterImageView"
            app:layout_constraintTop_toTopOf="@+id/waterImageView" />

        <TextView
            android:id="@+id/toxicTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/toxicImageView"
            app:layout_constraintStart_toEndOf="@+id/toxicImageView"
            app:layout_constraintTop_toTopOf="@+id/toxicImageView" />

        <TextView
            android:id="@+id/edibleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/edibleImageView"
            app:layout_constraintStart_toEndOf="@+id/edibleImageView"
            app:layout_constraintTop_toTopOf="@+id/edibleImageView" />

        <ImageView
            android:id="@+id/edibleImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/waterImageView"
            app:layout_constraintTop_toBottomOf="@+id/waterImageView"
            app:srcCompat="@android:drawable/btn_dialog" />

        <ImageView
            android:id="@+id/customNoteImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/edibleImageView"
            app:layout_constraintTop_toBottomOf="@+id/sowingImageView"
            app:srcCompat="@android:drawable/btn_dialog" />

        <TextView
            android:id="@+id/customNoteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/customNoteImageView"
            app:layout_constraintStart_toEndOf="@+id/customNoteImageView"
            app:layout_constraintTop_toTopOf="@+id/customNoteImageView" />

        <ImageView
            android:id="@+id/sowingImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/customNoteImageView"
            app:layout_constraintStart_toStartOf="@+id/edibleImageView"
            app:layout_constraintTop_toBottomOf="@+id/edibleImageView"
            app:srcCompat="@android:drawable/btn_dialog" />

        <TextView
            android:id="@+id/sowingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/sowingImageView"
            app:layout_constraintStart_toEndOf="@+id/sowingImageView"
            app:layout_constraintTop_toTopOf="@+id/sowingImageView" />

        <androidx.cardview.widget.CardView
            android:id="@+id/postsCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/waterDateTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>